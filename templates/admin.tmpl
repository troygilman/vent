func (c *{{ $node.Name }}SchemaClient) Query(
	ctx context.Context,
	predicates []vent.Predicate,
	orders []vent.OrderOption,
) (iter.Seq[vent.Entity], error) {
    q := c.client.Query()
	for _, p := range predicates {
		q = q.Where(p)
	}
	for _, o := range orders {
		q = q.Order(o)
	}
	result, err := q.All(ctx)
	if err != nil {
		return nil, err
	}
	return func(yield func(vent.Entity) bool) {
		for _, entity := range result {
			if !yield(entity) {
				return
			}
		}
	}, nil
}

func (c *{{ $node.Name }}SchemaClient) QueryOnly(
	ctx context.Context,
	predicates []vent.Predicate,
) (vent.Entity, error) {
	q := c.client.Query()
	for _, p := range predicates {
		q = q.Where(p)
	}
	return q.Only(ctx)
}

