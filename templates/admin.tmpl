    predicates []vent.Predicate,
    mutations []vent.Mutation,
) error {
    q := c.client.Update()
    for _, p := range predicates {
        q = q.Where(p)
    }
    for _, m := range mutations {
        switch m.FieldName {
        {{ range $field := $tableFields }}
        case "{{ $field.Name }}":
            q = q.Set{{ pascal $field.Name }}(m.Value.({{ $field.Type }}))
        {{ end }}
        }
    }
    return q.Exec(ctx)
}

